<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <resources>
        <resource name="mysql">
            <jdbc.driverName>com.mysql</jdbc.driverName>
            <jdbc.url>jdbc:mysql</jdbc.url>
            <jdbc.username>mysql_db_username</jdbc.username>
            <jdbc.password>mysql_db_password</jdbc.password>
        </resource>

        <resource name="h2-db-in-mem">
            <jdbc.driverName>com.h2db</jdbc.driverName>
            <jdbc.url>jdbc:h2</jdbc.url>
            <jdbc.username>h2_db_username</jdbc.username>
            <jdbc.password>h2_db_password</jdbc.password>
        </resource>
    </resources>
</configuration>
