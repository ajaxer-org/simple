<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <resources>
        <resource name="mysql">
            <!--<jdbc.driverName>com.mysql.cj.jdbc.Drive</jdbc.driverName>-->
            <jdbc.driverName>com.mysql.jdbc.Driver</jdbc.driverName>
            <jdbc.url>jdbc:mysql://localhost:3306/</jdbc.url>
            <jdbc.username>root</jdbc.username>
            <jdbc.password>Apple#1M</jdbc.password>

            <properties>
                <property key="transaction.enable" value="false"/>
                <property key="transaction.enable" value="true"/>
                <property key="transaction.enable" value="shakir"/>
            </properties>
        </resource>

        <resource name="h2-db-in-mem">
            <jdbc.driverName>com.h2db</jdbc.driverName>
            <jdbc.url>jdbc:h2</jdbc.url>
            <jdbc.username>h2_db_username</jdbc.username>
            <jdbc.password>h2_db_password</jdbc.password>

            <properties>
                <property key="sql.print" value="false"/>
                <property key="transaction.enable" value="false"/>
                <property key="jdbc.pool.enable" value="false"/>
                <property key="jdbc.pool.min_size" value="2"/>
                <property key="jdbc.pool.max_size" value="10"/>
            </properties>
        </resource>
    </resources>
</configuration>
